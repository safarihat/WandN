---
import { Picture } from "astro:assets";
import Link from "@/components/ui/link.astro";
import newHeroImage from "../assets/BusinessDeal.jpg";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={newHeroImage}
      alt="Business Stuff"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Business Brokerage & M&A Advisory
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Connecting business owners with qualified buyers locally and around the world. Seamless, secure, and confidential business sales.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/contact"
        class="flex gap-1 items-center justify-center"
        style="inverted">
        Contact Our Team
      </Link>
      <Link
        size="lg"
        style="outline"
        href="/pricing"
        class="flex gap-1 items-center justify-center">
        View Pricing
      </Link>
    </div>
  </div>
</main>
