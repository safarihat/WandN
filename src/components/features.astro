---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Sell-Side Representation",
    description:
      "We help Brazilian business owners prepare, market, and sell their companies to vetted local and international buyers.",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Buy-Side Advisory",
    description:
      "Looking to acquire a business in Brazil? We match you with the right opportunities and guide you through the process.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Confidential Listings",
    description:
      "Discreetly market your business to serious buyers while protecting sensitive information.",
    icon: "bx:bxs-lock-alt",
  },
  {
    title: "Global Buyer Network",
    description:
      "Access a curated network of buyers from Brazil and around the world, including investors and strategic acquirers.",
    icon: "bx:globe",
  },
  {
    title: "Legal & Due Diligence Support",
    description:
      "Expert guidance through negotiations, legal documentation, and due diligence for a smooth transaction.",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Dedicated Advisory Team",
    description:
      "Work with experienced M&A advisors focused on maximizing your business value and ensuring a successful deal.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Comprehensive business brokerage services
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    We provide end-to-end support for selling or buying businesses in Brazil, connecting you with the right partners locally and globally.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
