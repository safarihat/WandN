---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import PricingCard from "@/components/pricing.astro";

const pricing = [
  {
    name: "Basic Listing",
    price: "Free",
    popular: false,
    features: [
      "List your business for free",
      "Visible to local and international buyers",
      "Basic support",
      "Confidential listing option",
    ],
    button: {
      text: "List Now",
      link: "/contact",
    },
  },
  {
    name: "Premium Exposure",
    price: {
      monthly: "$99",
      annual: "$899",
      discount: "25% off annual",
      original: "$1320",
    },
    popular: true,
    features: [
      "All Basic features",
      "Priority placement to global buyers",
      "Featured in international newsletters",
      "Buyer screening assistance",
      "Enhanced confidentiality",
      "Dedicated support",
    ],
    button: {
      text: "Upgrade Now",
      link: "/contact",
    },
  },
  {
    name: "Enterprise Brokerage",
    price: "Custom",
    popular: false,
    features: [
      "Full-service M&A advisory",
      "Custom marketing to offshore investors",
      "Legal and due diligence support",
      "Negotiation and closing assistance",
      "24/7 dedicated advisor",
      "Tailored international outreach",
    ],
    button: {
      text: "Contact Us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Transparent pricing for business owners and global buyers.
      </Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-3 gap-10 mx-auto max-w-(--breakpoint-lg) mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
